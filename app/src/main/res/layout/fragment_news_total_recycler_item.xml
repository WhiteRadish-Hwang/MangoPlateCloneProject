<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/more_light_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/total_layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/total_img_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/total_layout_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/total_img_profile"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total_text_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="userName"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/total_img_user_holic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        app:srcCompat="@drawable/holic_img" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/total_layout_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/total_img_user_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/mango_review_count" />

                    <TextView
                        android:id="@+id/total_text_user_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="review" />

                    <ImageView
                        android:id="@+id/total_img_user_follower_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        app:srcCompat="@drawable/review_follow" />

                    <TextView
                        android:id="@+id/total_text_user_follower_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:text="follower" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/total_img_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/discount" />

                <TextView
                    android:id="@+id/total_text_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/total_img_expression"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/cliked_color"
                    android:textSize="13sp"
                    android:text="TextView" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/total_layout_main_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <TextView
                    android:id="@+id/total_text_at_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/cliked_color"
                    android:text="@" />
                <TextView
                    android:id="@+id/total_text_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/total_text_at_sign"
                    android:textColor="@color/cliked_color"
                    android:textStyle="bold"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/total_text_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/total_text_restaurant_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/cliked_color"
                    android:text="-" />
                <TextView
                    android:id="@+id/total_text_restaurant_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/total_text_dash"
                    android:textStyle="bold"
                    android:textColor="@color/cliked_color"
                    android:text="TextView" />
            </RelativeLayout>

            <TextView
                android:id="@+id/total_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:textColor="@color/blackForText"
                android:text="TextView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/total_recycler_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">

                <TextView
                    android:id="@+id/total_text_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="좋아요 13개"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/total_text_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/total_text_like_count"
                    android:text="댓글 0개"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/total_text_updateAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="16시간 전"
                    android:textSize="10sp" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/total_layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding ="10dp">


            <RelativeLayout
                android:id="@+id/total_layout_bottom_wanna_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/total_img_bottom_wanna_go"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/mango_wanna_go" />

                <TextView
                    android:id="@+id/total_text_bottom_wanna_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/total_img_bottom_wanna_go"
                    android:text="가고싶다"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/total_layout_bottom_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/total_layout_bottom_wanna_go">

                <ImageView
                    android:id="@+id/total_img_bottom_like"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/magno_like" />

                <TextView
                    android:id="@+id/total_text_bottom_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/total_img_bottom_like"
                    android:text="좋아요"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/total_layout_bottom_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/total_layout_bottom_like">

                <ImageView
                    android:id="@+id/total_img_bottom_comment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/mango_comment" />

                <TextView
                    android:id="@+id/total_text_bottom_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/total_img_bottom_comment"
                    android:text="댓글"
                    android:textSize="11sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/total_img_review_report_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/mango_three_dot" />

        </RelativeLayout>

        <!--    <LinearLayout-->
        <!--        android:id="@+id/total_layout_expendable"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        android:visibility="gone"-->
        <!--        android:orientation="vertical">-->

        <!--        <TextView-->
        <!--            android:id="@+id/total_text_expandable_content"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="TextView" />-->
        <!--    </LinearLayout>-->
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>