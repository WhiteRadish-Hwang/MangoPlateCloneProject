<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reply_btn_modify"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/reply_btn_border"
                android:text="@string/reply_btn_text_modify"
                android:textAlignment="center"
                android:textColor="@color/cliked_color"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reply_btn_delete"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/reply_btn_modify"
                android:background="@drawable/reply_btn_border"
                android:text="@string/reply_btn_text_delete"
                android:textColor="@color/cliked_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reply_btn_cancel"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/reply_btn_delete"
                android:background="@drawable/reply_btn_border_unclicked"
                android:text="@string/reply_btn_text_cancel"
                android:textColor="@color/dimgrey"/>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>