<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:start="0dp"
        android:end="0dp"
        android:bottom="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                android:color="@color/cliked_color_less"/>
            <solid android:color="@color/news_sort_background_color"/>
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp"/>
            <size
                android:height="20dp"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>


</layer-list>